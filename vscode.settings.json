{
    "terminal.integrated.fontFamily": "Hack, Consolas, \"Lucida Console\", monospace",
    "editor.rulers": [80, 100],
    "commands.commands": [
        {
            "text": "$(three-bars)",
            "command": "workbench.action.toggleActivityBarVisibility",
            "tooltip": "Toogle Activity Bar",
            "alignment": "right"
        },
        {
            "text": "$(terminal)",
            "command": "workbench.action.terminal.toggleTerminal",
            "tooltip": "Toogle Terminal",
            "alignment": "right"
        }
    ]
}