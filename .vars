# Setups

export EDITOR='vim';

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && . "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# Formats

export FORMAT_EXCEL='application/vnd.openxmlformats-officedocument.spreadsheetml.sheet'
export FORMAT_PDF='application/pdf'
export FORMAT_JSON='application/json'
export FORMAT_ZIP='application/zip'

# Motive

export MOTIVE_API=http://localhost:3000/reports
export MOTIVE_HUB=dalqahub05
export MOTIVE_CREDENTIALS="dev:dev"
export MOTIVE_BASIC_AUTH="$(encode64 ${MOTIVE_CREDENTIALS})"
export MOTIVE_AUTH="Authorization: Basic ${MOTIVE_BASIC_AUTH}"
export SSS_API="https://${MOTIVE_HUB}.motivedrilling.com/latest/global"